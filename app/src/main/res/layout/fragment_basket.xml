<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".cart.presentation.view.fragments.BasketFragment">

    <ImageButton
        android:id="@+id/back_btn_basket"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_back"
        android:src="@drawable/ic_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/productDetails_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_address"
        android:layout_marginTop="43dp"
        android:fontFamily="@font/markpro"
        android:textSize="18sp"
        android:textColor="@color/blue"
        android:layout_marginEnd="9dp"
        app:layout_constraintRight_toLeftOf="@id/basket_btn"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/basket_btn"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/round_10"
        android:backgroundTint="@color/orange"
        android:src="@drawable/ic_location_white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/my_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_cart"
        android:textSize="35sp"
        android:textColor="@color/blue"
        android:fontFamily="@font/markpro"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/back_btn_basket"
        app:layout_constraintTop_toBottomOf="@+id/back_btn_basket"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_30_top"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@+id/my_cart"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_basket"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:paddingStart="23dp"
            android:paddingEnd="32dp"
            android:paddingTop="50dp"
            android:overScrollMode="never"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#404068"
            android:layout_marginHorizontal="4dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:paddingStart="55dp"
            android:paddingEnd="35dp">
            <TextView
                android:id="@+id/total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/markpro"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/delivery_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/markpro"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/total_tv"
                />
            <TextView
                android:id="@+id/total_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$6,000 us"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/markpro"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/delivery_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/markpro"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="@id/total_price_tv"
                app:layout_constraintTop_toBottomOf="@+id/total_price_tv"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#34335d"
            android:layout_marginHorizontal="4dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_10"
            app:backgroundTint="@color/orange"
            android:text="Checkout"
            android:textSize="20sp"
            android:fontFamily="@font/markpro"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="44dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="44dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>