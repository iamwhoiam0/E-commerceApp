<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/item_cv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:elevation="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grayCard">
        <ImageView
            android:id="@+id/product_iv"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/samsung"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/current_price_tv"/>

        <TextView
            android:id="@+id/current_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1249$"
            android:textColor="@color/blue"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/title_tv"
            app:layout_constraintBottom_toTopOf="@+id/title_tv"/>

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500$"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:layout_marginStart="7dp"
            app:layout_constraintLeft_toRightOf="@+id/current_price_tv"
            app:layout_constraintBottom_toBottomOf="@+id/current_price_tv"/>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iphone 12"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageButton
            android:id="@+id/add_to_favorite"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@android:color/transparent"
            android:src="@drawable/heart_selector"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>