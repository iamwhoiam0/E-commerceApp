<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/navigation_main">
    <fragment
        android:id="@+id/navigation_main"
        android:name="com.example.ecommerceconcept.main.presentation.view.fragments.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_navigation_main_to_productDetailsFragment"
            app:destination="@id/navigation_product_details" />
    </fragment>

    <fragment
        android:id="@+id/navigation_basket"
        android:name="com.example.ecommerceconcept.cart.presentation.view.fragments.BasketFragment"
        android:label="BasketFragment"
        tools:layout="@layout/fragment_basket"/>

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.example.ecommerceconcept.FavoritesFragment"
        android:label="FavoritesFragment"
        tools:layout="@layout/fragment_favorites"/>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.ecommerceconcept.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile"/>
    <fragment
        android:id="@+id/navigation_product_details"
        android:name="com.example.ecommerceconcept.productDetails.presentation.view.fragments.ProductDetailsFragment"
        android:label="fragment_product_details"
        tools:layout="@layout/fragment_product_details" />

</navigation>