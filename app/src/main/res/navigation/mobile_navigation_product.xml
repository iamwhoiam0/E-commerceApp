<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation_prduct.xml"
    app:startDestination="@id/navigation_shop">

    <fragment
        android:id="@+id/navigation_shop"
        android:name="com.example.ecommerceconcept.presentation.view.fragments.ShopFragment"
        android:label="fragment_shop"
        tools:layout="@layout/fragment_shop">
        <argument
            android:name="current_item"
            app:argType="com.example.ecommerceconcept.data.entities.ProductDetailsDataItem" />
    </fragment>
    <fragment
        android:id="@+id/navigation_details"
        android:name="com.example.ecommerceconcept.presentation.view.fragments.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" />
    <fragment
        android:id="@+id/navigation_features"
        android:name="com.example.ecommerceconcept.presentation.view.fragments.FeaturesFragment"
        android:label="fragment_features"
        tools:layout="@layout/fragment_features"/>
</navigation>